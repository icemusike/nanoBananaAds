# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
# For local: http://localhost:5173
# For production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nanobananads

# JWT Authentication
# Generate a strong secret key for production (e.g., use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JVZoo Integration
# Get your secret key from JVZoo Seller Dashboard > My Account > JVZoo Postback Configuration
JVZOO_SECRET_KEY=your_jvzoo_secret_key_here

# License Generation Secret
# Generate a strong random key for license generation (e.g., use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
LICENSE_SECRET=your-license-secret-key-change-in-production
