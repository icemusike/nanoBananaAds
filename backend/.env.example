# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Prisma Database Configuration
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your_prisma_api_key_here"

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Authentication Secret
# Generate a strong random key for JWT signing
JWT_SECRET=your_jwt_secret_key_here

# JVZoo Integration
# Get your secret key from JVZoo Seller Dashboard > My Account > JVZoo Postback Configuration
JVZOO_SECRET_KEY=your_jvzoo_secret_key_here

# License Generation Secret
# Generate a strong random key for license generation
LICENSE_SECRET=your_license_secret_key_here

# Postmark Email Service
# Get your API key from https://account.postmarkapp.com/
POSTMARK_API_KEY=your_postmark_api_key_here
POSTMARK_FROM_EMAIL=your_verified_sender_email@yourdomain.com

# Application URL (for email links)
APP_URL=https://app.adgeniusai.io
